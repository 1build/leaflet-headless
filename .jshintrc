{

	// environment
	"browser": true,
	"node": true,
	"strict": true,

	"globals": {
		"define": true,
		"L": true,
		"chai": true,
		"it": true,
		"describe": true,
		"beforeEach": true,
		"afterEach": true
	},

	// code style
	"bitwise": true,
	"curly": true,
	"eqeqeq": true,
	"forin": false,
	"immed": true,
	"latedef": true,
	"newcap": true,
	"noarg": true,
	"noempty": true,
	"nonew": true,
	"undef": true,
	"unused": true,
	"quotmark": "single",
	"expr": true,

	// whitespace
	"indent": 4,
	"trailing": true,
	"white": true,
	"smarttabs": true,
	"maxlen": 120

	// code simplicity - not enforced but nice to check from time to time
	// "maxstatements": 20,
	// "maxcomplexity": 5
	// "maxparams": 4,
	// "maxdepth": 4
}
